scalar LocalDateTime

type Query {
    # Find user by name
    user(name: String!): User

    # Find tasks created by user
    createdBy(creator: String!): [Task]

    # Find tasks completedBy by user
    completedBy(completedBy: String!): [Task]

    # Find all solutions of user
    userSolutions(user: String!): [Solution]

    # Find all solutions for task
    taskSolutions(task: String!): [Solution]
}

